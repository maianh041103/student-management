extends ../../layouts/default.pug

block main
  h1(class="mb-4") Chỉnh sửa thông tin môn học

  form(
    action=`${prefixAdmin}/course/edit/${course._id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="name") Tên môn *
      input(
        type="text"
        class="form-control"
        id="name"
        name="name"
        value=course.name
        required
      )
    
    div(class="form-group")
      label(for="credits") Số tín chỉ
      input(
        type="number"
        class="form-control"
        id="credits"
        name="credits"
        min=0
        value=course.credits
        required
      )
    
    div(class="form-group")
      label(for="theory") Số tiết lý thuyết
      input(
        type="number"
        class="form-control"
        id="theory"
        name="theory"
        min=0
        value=course.theory
        required
      )

    div(class="form-group")
      label(for="practice") Số tiết thực hành
      input(
        type="number"
        class="form-control"
        id="practice"
        name="practice"
        min=0
        value=course.practice
        required
      )
    
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(course.status=="active"?true:false)
      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
        checked=(course.status=="inactive"?true:false)
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động

    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Chỉnh sửa