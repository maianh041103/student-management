extends ../../layouts/default

block main 
  h1(class="mb-4") Danh sách môn học
  .card.mb-3
    .card-header Danh sách
    .card-body 
      .row 
        .col-8 
          .col-4.text-right 
            a(
              href=`${prefixAdmin}/course/create`
              class="btn btn-outline-success"
            ) +Thêm mới

      table(
        class="table table-hover table-sm"
      )
        thead
          tr 
            th STT 
            th Tên môn
            th Số tín chỉ
            th Số tiết lý thuyết
            th Số tiết thực hành
            th Trạng thái
            th Hành động
        tbody 
          if(courses && courses.length>0)
            each course,index in courses 
              tr 
                td #{index+1}
                td #{course.name}
                td #{course.credits}
                td #{course.theory}
                td #{course.practice}
                td 
                  if(course.status == "active")
                    a(
                      href="javascript:;" 
                      class="badge text-bg-success"
                      type="course"
                      data-status=course.status
                      data-id=course._id
                      ) Hoạt động 
                  else
                    a(
                      href="javascript:;" 
                      class="badge text-bg-danger"
                      type="course"
                      data-status=course.status
                      data-id=course._id
                      ) Dừng hoạt động
                
                td 
                  a(
                    class="btn btn-secondary btn-sm"
                    href=`${prefixAdmin}/course/detail/${course._id}`
                  ) Chi tiết
                  a(
                    class="btn btn-warning btn-sm"
                    href=`${prefixAdmin}/course/edit/${course._id}`
                  ) Sửa
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete
                    data-id=course._id
                    type="course"
                  ) Xóa
          else
            tr
              td(colspan="4" class="text-center") 
                h3 Chưa có môn nào được tạo

