extends ../../layouts/auth.pug

block main 
  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đổi mật khẩu

        form(
          action=`${prefixAdmin}/auth/reset-password?email=${email}`
          method="POST"
        )
          div(class="form-group")
            label(for="password") Mật khẩu: 
            input(
              type="password"
              name="password"
              id="password"
              class="form-control"
              required
            )
          div(class="form-group")
            label(for="confirmPassword") Xác nhận mật khẩu: 
            input(
              type="password"
              name="confirmPassword"
              id="confirmPassword"
              class="form-control"
              required
            )
          div(form-group)
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đổi mật khẩu
