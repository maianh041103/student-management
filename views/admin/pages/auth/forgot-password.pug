extends ../../layouts/auth.pug

block main 
  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Nhập email

        form(
          action=`${prefixAdmin}/auth/forgot-password`
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email: 
            input(
              type="email"
              name="email"
              id="email"
              class="form-control"
              required
            )
          div(form-group)
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Gửi