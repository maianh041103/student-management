extends ../../layouts/default.pug

block main
  h1(class="mb-4") Chỉnh sửa tài khoản giảng viên

  form(
    action=`${prefixAdmin}/teacher-account/edit/${account._id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="email") Email
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
        required
        value=account.email
      )

    div(class="form-group")
      label(for="password") Mật khẩu
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
      )
    
    div(class="form-group")
      label(for="code") Mã giảng viên
      select(name="code" id="code" class="form-control")
        option(disabled) -- Chọn --
        each code in listCode
          option(value=code checked = (code==account.code?true:false)) #{code}

    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật