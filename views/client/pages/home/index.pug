extends ../../layouts/default.pug
include ../../mixins/moment.pug

block main 
  h1(class="mb-4") Thông tin cá nhân
  .row
    .col-3
      image(
        src=user.info.avatar||`/client/images/avatar.jpg`
        alt="Ảnh đại diện"
        width="250px"
        class="mb-4"
      )

    .col-3
      if(user.info.studentCode)
        p Mã sinh viên: #{user.info.studentCode}

      if(user.info.teacherCode)
        p Mã giảng viên: #{user.info.teacherCode}

      if(user.info.name)
        p Họ tên: #{user.info.name}
      
      if(user.info.classManagementName)
        p Lớp học: #{user.info.classManagementName}
      
      if(user.info.departmentName)
        p Khoa: #{user.info.departmentName}

      if(user.info.professionalTeamName)
        p Lớp học: #{user.info.professionalTeamName}

    .col-3
      p Giới tính: #{user.info.gender==0?"Nam":"Nữ"}

      if(user.info.birthday)
        p Ngày sinh: 
          +formatDate(user.info.birthday)

      if(user.info.countryside)
        p Quê quán: #{user.info.countryside}